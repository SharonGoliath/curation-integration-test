FROM unit_common

RUN pip install bs4
RUN apk --no-cache add imagemagick

COPY ./proxy.pem /usr/src/app/cadcproxy.pem
COPY ./ ./gem2caom2
RUN pip install ./gem2caom2

COPY ./docker-entrypoint.sh /usr/src/app/gem2caom2
COPY ./config.yml /usr/src/app/config.yml
COPY ./gem2caom2/tests/data/from_paul.txt /app/data/from_paul.txt

ENTRYPOINT ["/usr/src/app/gem2caom2/docker-entrypoint.sh"]

