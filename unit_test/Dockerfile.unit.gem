FROM unit_pandas

RUN apk --no-cache add imagemagick
RUN pip install bs4 

COPY ./caom2tools_unit/caom2 ./caom2
COPY ./caom2tools_unit/caom2utils ./caom2utils
COPY ./caom2pipe_unit ./caom2pipe
RUN pip install ./caom2
RUN pip install ./caom2utils
RUN pip install ./caom2pipe 

COPY ./gem2caom2_unit ./gem2caom2
RUN pip install ./gem2caom2

RUN cp ./gem2caom2/scripts/docker-entrypoint.sh /usr/src/app/gem2caom2
RUN cp ./gem2caom2/scripts/config_with_visit.yml /config_with_visit.yml
RUN cp ./gem2caom2/scripts/config_with_ingest.yml /config_with_ingest.yml
RUN cp ./gem2caom2/scripts/state.yml /state.yml
RUN mkdir -p /app/data
RUN cp ./gem2caom2/gem2caom2/tests/data/from_paul.txt /app/data/from_paul.txt

ENTRYPOINT ["/usr/src/app/gem2caom2/docker-entrypoint.sh"]

