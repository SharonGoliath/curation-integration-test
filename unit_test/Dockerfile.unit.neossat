FROM unit_matplotlib

RUN pip install deprecated

COPY ./caom2tools_unit/caom2 ./caom2
COPY ./caom2tools_unit/caom2utils ./caom2utils
COPY ./caom2pipe_unit ./caom2pipe
RUN pip install ./caom2
RUN pip install ./caom2utils
RUN pip install ./caom2pipe

COPY ./neossat2caom2_unit ./neossat2caom2/
RUN cp ./neossat2caom2/scripts/docker-entrypoint.sh /usr/src/app/neossat2caom2/
RUN pip install ./neossat2caom2/ 

ENTRYPOINT ["/usr/src/app/neossat2caom2/docker-entrypoint.sh"]

