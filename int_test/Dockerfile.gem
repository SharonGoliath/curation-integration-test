FROM int_pandas

RUN apk --no-cache add imagemagick
RUN pip install bs4
  
COPY ./caom2tools/caom2 ./caom2
COPY ./caom2tools/caom2utils ./caom2utils
RUN pip install ./caom2
RUN pip install ./caom2utils

COPY ./caom2pipe ./caom2pipe
RUN pip install ./caom2pipe

COPY ./gem2caom2 ./gem2caom2
RUN pip install ./gem2caom2 && mkdir -p /app/data && \
  cp ./gem2caom2/from_paul.txt /app/data

COPY ./docker-entrypoint.sh /

ENTRYPOINT ["/docker-entrypoint.sh"]
