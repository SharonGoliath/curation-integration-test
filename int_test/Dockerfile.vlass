FROM int_matplotlib

RUN oldpath=`pwd` && cd /tmp && \
    wget http://www.eso.org/~fstoehr/footprintfinder.py && \
    cp footprintfinder.py /usr/local/lib/python3.6/site-packages/footprintfinder.py && \
    chmod 755 /usr/local/lib/python3.6/site-packages/footprintfinder.py && \
    cd $oldpath

RUN pip install bs4

COPY ./caom2tools ./caom2tools
RUN cd caom2tools && \
        pip install ./caom2 && \
        pip install ./caom2pipe && \
        pip install ./caom2utils && \
        cd ..

COPY ./vlass2caom2 ./vlass2caom2/
RUN pip install ./vlass2caom2/ 

COPY ./vlass2caom2/data/ArchiveQuery-2018-08-15.csv /usr/src/
COPY ./vlass2caom2/data/rejected_file_names-2018-09-05.csv /usr/src/
COPY ./docker-entrypoint.sh ./
COPY ./vlass2caom2/scripts/config.yml /
COPY ./vlass2caom2/scripts/docker-entrypoint.sh /


ENTRYPOINT ["/docker-entrypoint.sh"]

