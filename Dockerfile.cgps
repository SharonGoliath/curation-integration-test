FROM python:3.6

RUN pip install astropy && pip install numpy && \
	pip install spherical-geometry
RUN pip install cadcdata && pip install caom2repo && \
        pip install PyYAML && pip install vos && \
        pip install caom2

WORKDIR /usr/src/app
COPY ./caom2tools ./caom2tools
RUN cd caom2tools && pip install ./caom2pipe && pip install ./caom2utils && cd ..

COPY ./cgps2caom2 ./cgps2caom2/
RUN pip install ./cgps2caom2/ 

COPY ./docker-entrypoint.sh ./

ENTRYPOINT ["./docker-entrypoint.sh"]

